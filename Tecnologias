    <script>
        gsap.registerPlugin(ScrollTrigger);

        window.onload = () => {
            
            // Shared Spotlight and Pop Function
            const setupTechAnimation = (id, section, directionIn, directionOut) => {
                const img = `#img-${id}`;
                const spotlight = `#spotlight-${id}`;
                const content = `#content-${id}`;

                // Entrance logic
                if (directionIn === 'center') {
                    gsap.set(img, { x: 0, opacity: 1, scale: 1 });
                } else {
                    gsap.set(img, { x: directionIn === 'right' ? 800 : -800, opacity: 0, scale: 0.7 });
                }

                // Scroll Trigger Timeline
                const tl = gsap.timeline({
                    scrollTrigger: {
                        trigger: section,
                        start: "top bottom",
                        end: "bottom top",
                        scrub: 1.5,
                    }
                });

                // Phase 1: Moving to Center + POP + HIGHLIGHT
                tl.to(img, { 
                    x: 0, 
                    opacity: 1, 
                    scale: 1.1, // Pop up slightly larger
                    duration: 1, 
                    ease: "power2.out" 
                })
                .to(spotlight, { 
                    opacity: 1, 
                    scale: 1, 
                    duration: 0.5 
                }, "-=0.5")
                .to(content, { 
                    opacity: 0.1, // Dim content to highlight image
                    scale: 0.95,
                    duration: 0.5 
                }, "-=0.5");

                // Phase 2: Settling in Center (Brief pause effect via scrub)
                tl.to(img, { scale: 1, duration: 0.5 });

                // Phase 3: Moving Out
                tl.to(img, { 
                    x: directionOut === 'left' ? -800 : 800, 
                    opacity: 0, 
                    scale: 0.7, 
                    duration: 1,
                    ease: "power2.in" 
                })
                .to(spotlight, { 
                    opacity: 0, 
                    scale: 0.5, 
                    duration: 0.5 
                }, "-=1")
                .to(content, { 
                    opacity: 1, 
                    scale: 1,
                    duration: 0.5 
                }, "-=1");
            };

            // Setup specific animations for each section
            setupTechAnimation(1, "#section-1", "center", "left");
            setupTechAnimation(2, "#section-2", "right", "left");
            setupTechAnimation(3, "#section-3", "right", "center");

            // Initial entrance for first section content
            gsap.from("#content-1", {
                y: 50,
                opacity: 0,
                duration: 1.5,
                ease: "power4.out"
            });
        };
    </script>
